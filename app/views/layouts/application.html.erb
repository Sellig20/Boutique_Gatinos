<!DOCTYPE html>
<html>
  <head>
    <title>BoutiqueGatinos</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="stylesheet" href="style.css">
      <link rel="stylesheet" href="bootstrap.min.css">
      <link rel="shortcut icon" type="image/x-icon" href="chain.ico" />
  </head>

  <header>
    <div id="nav">
      <%= link_to "ACCUEIL", root_path, class:"links" %>
      <%= link_to "PHOTOS", root_path, class:"links" %>
      <h1><%= link_to "GATINOS", root_path, class:"links" %></h1>
      <%= link_to "PANIER", "#", class:"links" %>
      <% if user_signed_in? %>
     <%= link_to "DECONNEXION", destroy_user_session_path, "data-method": :delete, class:"links" %>
      <% else %>
      <%= link_to "INSCRIPTION", "/users/sign_up", class:"links" %>
      <% end %>

    </div>
  </header>

  <body>
    <%= yield %>

  </body>
</html>
