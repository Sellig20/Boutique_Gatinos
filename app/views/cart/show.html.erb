<!DOCTYPE html>
<html>
<head>
	<title>cart</title>
</head>
<body>

	<div id="pageCart">
			<div id="cart">
				<p id="row1">
					<%= @user %>
				</p>
					<% total = 0 %>
				<% @cart.items.each do |item| %>
					<p class="each"><img class="icon"src="<%= item.image_url%>">
						<%= item.title %>
						<span><%= item.price %>€</span>
						<%= button_to "Supprimer l'article", bill_path(item.id), :method =>:delete %>
					</p>
						<% total = total + item.price %>
				<% end %>
						<div id="total">
							<p>total : <%= total %>€</p>	
						</div>
					<button class="bouton">
						valider le panier
					</button>

			</div>
	</div>

</body>
</html>